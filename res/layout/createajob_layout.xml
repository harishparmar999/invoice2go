<?xml version="1.0" encoding="utf-8"?>

<ScrollView
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:focusable="true"
       android:focusableInTouchMode="true"
>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<TextView 
	android:padding="12sp" 
	android:textSize="15sp"
	android:text="Job:" 
	android:id="@+id/Job"
	android:layout_width="82sp"
	android:layout_height="43sp"
	android:gravity="right"
></TextView>

<EditText 
	android:textSize="15sp" 
	android:id="@+id/NewJob"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:hint="Create New Job Name...."
	android:layout_toRightOf="@+id/Job"
></EditText>

<TextView 
	android:padding="2sp" 
	android:textSize="15sp"
	android:text="Customer:" 
	android:id="@+id/TextView01"
	android:layout_width="82sp"
	android:layout_height="43sp"
	android:layout_below="@+id/NewJob"
	android:gravity="center"
></TextView>

<Button
	android:id="@+id/AddCustomer"
	android:layout_width="48sp"
	android:layout_height="48sp"
	android:text="+"
	android:textSize="25sp"
	android:layout_alignTop="@+id/TextView01"
	android:layout_alignParentRight="true"
></Button>

<Spinner 
	android:id="@+id/CustomerSpinner"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:prompt="@string/AddCustomerName"
	android:layout_alignTop="@+id/TextView01"
	android:layout_toRightOf="@+id/TextView01"
	android:layout_toLeftOf="@+id/AddCustomer"
></Spinner>

<TextView 
	android:padding="12sp" 
	android:textSize="15sp"
	android:text="Job Site:" 
	android:id="@+id/TextView02"
	android:layout_width="82sp"
	android:layout_height="43sp"
	android:layout_below="@+id/TextView01"
	android:gravity="right"
></TextView>

<Button
	android:id="@+id/AddJobSite"
	android:layout_width="48sp"
	android:layout_height="48sp"
	android:text="+"
	android:textSize="25sp"
	android:layout_alignTop="@+id/TextView02"
	android:layout_alignParentRight="true"
></Button>

<Spinner 
	android:id="@+id/JobSiteSpinner"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:prompt="@string/AddJobSite"
	android:layout_alignTop="@+id/TextView02"
	android:layout_toRightOf="@+id/TextView02"
	android:layout_toLeftOf="@+id/AddJobSite"
></Spinner>

<TextView 
	android:padding="12sp" 
	android:textSize="15sp"
	android:text="Notes:" 
	android:id="@+id/TextView03"
	android:layout_width="fill_parent"
	android:layout_height="43sp"
	android:layout_below="@+id/TextView02"
></TextView>

<EditText 
	android:textSize="15sp" 
	android:id="@+id/NotesBox"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:lines="5"
	android:singleLine="false"
	android:hint="Add Description of Work...."
	android:gravity="top"
	android:inputType="textMultiLine"
	android:layout_below="@+id/TextView03"
></EditText>

<Button
	android:id="@+id/SaveJob"
	android:layout_width="150sp"
	android:layout_height="wrap_content"
	android:text="Save"
	android:textSize="20sp"
	android:layout_below="@+id/NotesBox"
></Button>

<Button
	android:id="@+id/CancelJob"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:text="Cancel"
	android:textSize="20sp"
	android:layout_alignTop="@+id/SaveJob"
	android:layout_toRightOf="@+id/SaveJob"
></Button>

</RelativeLayout>

</ScrollView>